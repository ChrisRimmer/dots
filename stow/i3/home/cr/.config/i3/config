# This file has been auto-generated by i3-config-wizard(1).
# It will not be overwritten, so edit it as you like.
#
# Should you change your keyboard layout some time, delete
# this file and re-run i3-config-wizard(1).
#

# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $winkey Mod4

# Set font based on Xresources
set_from_resource $font i3.font
font xft:$font

# Use Mouse+$winkey to drag floating windows to their wanted position
floating_modifier $winkey

# kill focused window
bindsym $winkey+Shift+q kill

# change focus
bindsym $winkey+h focus left
bindsym $winkey+j focus down
bindsym $winkey+k focus up
bindsym $winkey+l focus right

# move focused window
bindsym $winkey+Shift+h move left
bindsym $winkey+Shift+j move down
bindsym $winkey+Shift+k move up
bindsym $winkey+Shift+l move right

# move container / workspace to other outputs
bindsym $winkey+o move container to output right
bindsym $winkey+shift+o move workspace to output right

# split in horizontal orientation
bindsym $winkey+x split h

# split in vertical orientation
bindsym $winkey+v split v

# enter fullscreen mode for the focused container
bindsym $winkey+f fullscreen toggle
bindsym $winkey+Shift+f focus parent; fullscreen; focus child

# toggle tiling / floating
bindsym $winkey+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $winkey+space focus mode_toggle

# focus the parent container
bindsym $winkey+a focus parent

# Toggle container display mode
bindsym $winkey+c layout toggle splitv splith tabbed

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1-tty"
set $ws2 "2-im"
set $ws3 "3-web"
set $ws4 "4-etc"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9-audio"
set $ws10 "10-bg"

# switch to workspace
bindsym $winkey+1 workspace $ws1
bindsym $winkey+2 workspace $ws2
bindsym $winkey+3 workspace $ws3
bindsym $winkey+4 workspace $ws4
bindsym $winkey+5 workspace $ws5
bindsym $winkey+6 workspace $ws6
bindsym $winkey+7 workspace $ws7
bindsym $winkey+8 workspace $ws8
bindsym $winkey+9 workspace $ws9
bindsym $winkey+0 workspace $ws10

# move focused container to workspace
bindsym $winkey+Shift+1 move container to workspace $ws1
bindsym $winkey+Shift+2 move container to workspace $ws2
bindsym $winkey+Shift+3 move container to workspace $ws3
bindsym $winkey+Shift+4 move container to workspace $ws4
bindsym $winkey+Shift+5 move container to workspace $ws5
bindsym $winkey+Shift+6 move container to workspace $ws6
bindsym $winkey+Shift+7 move container to workspace $ws7
bindsym $winkey+Shift+8 move container to workspace $ws8
bindsym $winkey+Shift+9 move container to workspace $ws9
bindsym $winkey+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $winkey+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $winkey+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $winkey+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        font xft:$font
}

# Cosmetic shit
default_border pixel 2
bindsym $winkey+y border pixel 2
gaps inner 10
# Borders
# class                 border  backgr. text    indicator child_border
client.focused          #ffffff #444444 #888888 #2e9ef4   #ffffff
client.focused_inactive #cccccc #000000 #555555 #484e50   #cccccc
client.unfocused        #000000 #000000 #555555 #292d2e   #888888
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

exec --no-startup-id "i3-msg 'workspace 1-tty; append_layout ~/.config/i3/layouts/1080p-tty'"
exec --no-startup-id "i3-msg 'workspace 2-im; append_layout ~/.config/i3/layouts/1080p-comms'"

exec sxhkd &
exec compton -b
exec wallrotate homeworld &

exec xst -e htop &
exec xst -e peaclock &
exec xst -e top &
exec glmviz &
exec xst -e ncmpcpp &
exec xst &
exec xst &
exec spotify &
